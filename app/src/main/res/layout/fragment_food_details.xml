<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetails">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        >

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="353dp"
            android:layout_height="289dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/card4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/details_image"
            app:layout_constraintTop_toBottomOf="@+id/details_image" />

        <TextView
            android:id="@+id/details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price"
            android:textColor="#06E41D"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/details_name"
            app:layout_constraintTop_toBottomOf="@+id/details_name" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/active"
            app:layout_constraintBottom_toBottomOf="@+id/details_name"
            app:layout_constraintStart_toEndOf="@+id/details_name"
            app:layout_constraintTop_toTopOf="@+id/details_name" />

        <TextView
            android:id="@+id/countOfFood"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="@+id/countOfFood"
            app:layout_constraintEnd_toEndOf="@+id/countOfFood"
            app:layout_constraintStart_toEndOf="@+id/countOfFood"
            app:layout_constraintTop_toTopOf="@+id/countOfFood" />

        <ImageView
            android:id="@+id/minus"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:src="@drawable/minus"
            app:layout_constraintBottom_toBottomOf="@+id/countOfFood"
            app:layout_constraintEnd_toStartOf="@+id/countOfFood"
            app:layout_constraintStart_toStartOf="@+id/countOfFood"
            app:layout_constraintTop_toTopOf="@+id/countOfFood" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="61dp"
            android:layout_height="68dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/locaction"
            app:layout_constraintStart_toStartOf="@+id/details_price"
            app:layout_constraintTop_toBottomOf="@+id/details_price" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/location"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/location"
            app:layout_constraintTop_toTopOf="@+id/location" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="NO.72 Ashimota road, Accra, Ghana."
            app:layout_constraintBottom_toBottomOf="@+id/location"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/location" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="61dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/delivery"
            app:layout_constraintStart_toStartOf="@+id/location"
            app:layout_constraintTop_toBottomOf="@+id/location" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Delivery Time"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="45 Minutes."
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>